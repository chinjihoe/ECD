<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.ecd">

    <application
        android:allowBackup="true"
        android:icon="@drawable/hp_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".LoginActivity" />
        <activity android:name=".PopupActivity" android:theme="@style/PopupTheme"/>
        <activity android:name=".CentralScreenActivity" android:label="Name here?"/>
        <activity android:name=".SpeechToTextActivity"/>

    </application>

</manifest>