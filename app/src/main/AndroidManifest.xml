<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.ecd">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hp_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".CentralScreenActivity"
            android:label="Name here?"
            android:titleTextColor="@color/White" />
        <activity android:name=".SpeechToTextActivity" />
        <activity android:name=".SpeechActivity" />
        <activity android:name=".NFCActivity" />
        <activity
            android:name=".clientActivityListActivity"
            android:label="@string/title_clientactivity_list"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".clientActivityDetailActivity"
            android:label="@string/title_clientactivity_detail"
            android:parentActivityName=".clientActivityListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hr.ecd.clientActivityListActivity" />
        </activity>
    </application>

</manifest>